<section class="container mt-3">
  <h2>List of Passengers</h2>
  <nav><%= link_to "Create new passenger", new_passenger_path %></nav>

  <% if @passengers.length > 0 %>
    <table class="table">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Phone Number</th>
      </tr>
      <% @passengers.each do |passenger| %>
        <tr>
          <td scope="row"><%= passenger.id %></th>
          <td><%= link_to passenger.name, passenger_path(passenger.id) %></th>
          <td><%= passenger.phone_num %></th>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>NO PASSENGERS</p>
  <% end %>
</section>