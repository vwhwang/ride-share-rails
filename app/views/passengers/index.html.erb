<h2>All Passengers</h2>

<%= link_to "ADD NEW PASSENGER", new_passenger_path %>

<ul>

  <% if @passengers.length > 0  %>
    <% @passengers.each do |passenger| %>
      <li>passenger id:<%= passenger[:id] %>,name:<%= link_to passenger.name, passenger_path(passenger.id)%>, phone number:<%= passenger.phone_num%></li>
    <% end  %>
  <% else %>
    <li>NO PASSENGERS</li>
  <% end %>

</ul>