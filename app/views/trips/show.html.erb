<h2>Trip's Detail</h2>
<%= link_to "Edit Trip", edit_trip_path,class:"btn btn-info m-3 custom" %>
<%= link_to "Delete Trip", trip_path(@trip.id) ,method: :delete, data: { confirm: "Are you sure you want to delete this trip?"},class:"btn btn-info m-3 custom" %>

<section>
<ul>
  <li>Trip's ID: <%= @trip[:id]%></li>
  <li>Trip Date: <%= @trip[:date]%></li>
  <li>Trip Cost: <%= @trip[:cost]%></li>
  <li>Trip Rating: <%= @trip[:rating] %></li>
  <li>Passenger Name: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger_id) %></li>
  <li>Driver Name: <%= link_to @trip.driver.name, driver_path(@trip.driver_id) %></li> 
</ul> 
</section>