<% if @driver.errors.any? %>
  <ul>
    <% @driver.errors.each do |column, message| %>
      <li><%= column.capitalize %> <%= message %></li>
    <% end %>  
  </ul>
<% end %>

  <%= form_with model: @driver do |f| %>
    <div class="form-group col-md-4">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :vin %>
      <%= f.text_field :vin, class: "form-control" %>
    </div>
    <%= f.submit "#{action_name} Driver", class: "btn btn-primary ml-3" %>
  <% end %>
